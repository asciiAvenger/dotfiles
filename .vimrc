" line numbers
set number
set relativenumber

" indentation and spaces
set expandtab
set tabstop=2 shiftwidth=2
set smarttab
set autoindent
set smartindent

" case insensitive search
set ignorecase
set smartcase

" search highlighting
set hlsearch
set incsearch

" show bracket matches
set showmatch

set scrolloff = 8

set mouse = ""

" syntax highlighting
syntax enable
